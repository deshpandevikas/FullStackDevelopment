<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_read_message"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.vikasdeshpande.hw1.ReadMessage">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TextView
            android:text="From:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:id="@+id/tvTo"
             />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvMsgFrom"
            android:layout_toRightOf="@+id/tvTo"
            android:textSize="20sp"/>
    </RelativeLayout>

    <View android:background="#000000"
        android:layout_marginTop="5dp"
        android:layout_width = "match_parent"
        android:layout_height="1dp"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TextView
            android:text="Region:"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvRegionText"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_toRightOf="@+id/tvRegionText"
            android:textSize="20sp"
            android:layout_height="wrap_content"
            android:id="@+id/tvRegionName" />
    </RelativeLayout>

    <View android:background="#000000"
        android:layout_marginTop="5dp"
        android:layout_width = "match_parent"
        android:layout_height="1dp"/>

    <TextView
        android:text=""
        android:textSize="19sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvMessageBody" />


</LinearLayout>
